<ParameterList name="Neutron Diffusion">
  <!-- GRID PARAMETERS -->
  <Parameter name="I_BLOCKS" type="int" value="1"/>
  <Parameter name="J_BLOCKS" type="int" value="1"/>
  <Parameter name="X_MIN" type="double" value="0.0"/>
  <Parameter name="X_MAX" type="double" value="200.0"/>
  <Parameter name="Y_MIN" type="double" value="0.0"/>
  <Parameter name="Y_MAX" type="double" value="200.0"/>
  <Parameter name="X_NUM_CELLS" type="int" value="2000"/>
  <Parameter name="Y_NUM_CELLS" type="int" value="2000"/>
  <Parameter name="GRID_TYPE" type="string" value="UNIFORM"/>
  <!-- PHYSICS PARAMETERS -->
  <Parameter name="BC TYPE" type="string" value="VACUUM"/>
  <Parameter name="ABSORPTION XS" type="double" value="5.0"/>
  <Parameter name="SCATTERING XS" type="double" value="1.0"/>
  <Parameter name="SOURCE TYPE" type="string" value="UNIFORM"/>
  <Parameter name="SOURCE STRENGTH" type="double" value="1.0"/>
  <!-- CHIMERA SOLVER PARAMETERS -->
  <Parameter name="SOLVER TYPE" type="string" value="MCSA"/>
  <Parameter name="RNG TYPE" type="string" value="MT19937"/>
  <Parameter name="TOLERANCE" type="double" value="1e-008"/>
  <Parameter name="MAX ITERS" type="int" value="1"/>
  <Parameter name="SPLIT TYPE" type="string" value="JACOBI"/>
  <Parameter name="MC TYPE" type="string" value="ADJOINT"/>
  <Parameter name="WEIGHT CUTOFF" type="double" value="1e-004"/>
  <Parameter name="HISTORIES PER STAGE" type="int" value="10000"/>
  <Parameter name="NUM OVERLAP" type="int" value="0"/>
  <Parameter name="OUTPUT_FILENAME" type="string" value="diffusion_out.vtk"/>
